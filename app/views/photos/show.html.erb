<p id="notice"><%= notice %></p>

<p>
  <%= image_tag @photo.image.url, class: 'img-fluid' %>
  <!-- <%#=  @photo.image_data %> -->
</p>

<p>
  <strong><%= @photo.user.email %></strong>
          <%= @photo.caption %>
</p>
<p>Comment:</p>

<%= link_to 'New Photo Comment', new_photo_comment_path(@photo) %>
|
<% if current_user == @photo.user %>
    <!-- <%#= link_to "Cancel", photos_path %> | -->
    <%= link_to 'Edit', edit_photo_path(@photo) %> |
    <%= link_to 'Destroy', @photo, method: :delete, data: { confirm: 'Are you sure?'} %>
<% end %>
<%= link_to 'Back', photos_path %>

<br><br>

<%#= @photo_comments.inspect %>

<div>
<% @photo_comments.each do |comment| %>
  <p><%= comment.message %> | <%= @photo.commenter_username(comment.user_id) %> | <%= comment.created_at %></p>
<% end %>
</div>
